            <TextBlock Name ="CompanyText" Text="Сбербанк" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" TextAlignment="Center" Height="30" TextWrapping="Wrap"/>
            <TextBlock Text="Средний размер сделок" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" TextAlignment="Center" Height="22" TextWrapping="Wrap"/>
            <TextBlock x:Name="TextBlocks" TextWrapping="Wrap" VerticalAlignment="Top" Height="51" FontSize="48" TextAlignment="Center" Foreground="#FF212121"/>
            <TextBlock Text="акций" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" TextAlignment="Center" Height="22" TextWrapping="Wrap"/>
        </StackPanel>

    </Grid>
</Page>
